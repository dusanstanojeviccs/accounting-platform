{{#modal-comp modalId="billLineModal" title=(if line.isNew "New Bill Line" "Save Bill Line")
				btnClass="btn-primary" btnText=(if line.isNew "New Bill Line" "Save Bill Line")
				backAction="backAction" successAction="successAction"}}
	{{modal-error-comp model=bill}}

	<div class="form-group">
    	<label for="exampleTextarea">Item Name</label>
    	{{input type="text" class="form-control" value=line.itemName}}
    </div>

	<div class="form-group">
		<label for="exampleTextarea">Account</label>
		<select class="form-control" onchange={{action "setAccount" value="target.value"}}>
		    <option value="-1" selected={{and (eq "" line.accountNum) (eq "" line.accountName)}}>Please select an account</option>

		    {{#each accounts as |account index|}}
		    	<option value={{index}} selected={{and (eq account.accountNum line.accountNum) (eq account.accountName line.accountName)}}>{{account.accountNum}} - {{account.accountName}}</option>
		    {{/each}}
		</select>
	</div>

  	<div class="form-group">
    	<label for="exampleTextarea">Amount</label>
    	{{input type="text" class="form-control" value=line.amount}}
    </div>


{{/modal-comp}}