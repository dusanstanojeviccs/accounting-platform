<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">
                Invoices
                {{modal-trigger modalId="invoiceModal" btn="btn-primary" img="fa-plus" text="New Invoice" class="pull-right" onTrigger="setupNewInvoice"}}
            </h4>
            <p class="category">Invoices help you keep track of your earnings</p>
        </div>

            
        <div class="content">

            {{#if notDeleted.length}}
                <div class="table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead data-table-id={{tableId}}>
                            <th></th>
                            {{#sortable-th key="vendorName"}}
                                Customer
                            {{/sortable-th}}
                            {{#sortable-th key="creationDate" class="text-center"}}
                                Created
                            {{/sortable-th}}
                            {{#sortable-th key="dueDate" class="text-center"}}
                                Due
                            {{/sortable-th}}
                        </thead>
                        <tbody>
                            {{#each notDeleted as |invoice index|}}
                                {{#link-to "accounting.invoice" invoice.id tagName="tr"}}
                                    <td>
                                        {{increment index}} 
                                    </td>
                                    <td>{{invoice.vendorName}}</td>
                                    <td class="text-center">{{invoice.creationDate}}</td>
                                    <td class="text-center">{{invoice.dueDate}}</td>
                                {{/link-to}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="row">
                    <div class="no-results">
                        <div class="text-danger">
                            No Results Found
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>

{{invoice-modal invoice=invoice vendors=model.vendors}}