<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">Chart Of Accounts
            {{modal-trigger modalId="accountModal" btn="btn-primary" img="fa-plus" text="New Account" class="pull-right" onTrigger="setupNewAccount"}}</h4>
            <p class="category">Accounts are used to record, sort and store balance sheet and income statement transactionsr</p>
        </div>


        <div class="content">
            {{#if notDeleted.length}}
                <div class="table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead data-table-id={{tableId}}>
                            <th></th>
                            {{#sortable-th key="type" class="text-center"}}
                                Type
                            {{/sortable-th}}
                            
    						{{#sortable-th key="accountNum" type="number"}}
                                Account Number
                            {{/sortable-th}}
                            {{#sortable-th key="accountName"}}
                                Account Name
                            {{/sortable-th}}
                        </thead>
                        <tbody>
                            {{#each notDeleted as |account index|}}
        						<tr>
        							<td>
                                    {{#modal-trigger modalId="deleteAccountModal" link=true onTrigger=(action "setAccount" account)}}
                                        {{increment index}} <span class="fa fa-trash text-danger"></span>
                                    {{/modal-trigger}}
                                    </td>
        							<td class="text-center">{{account.type}}</td>
        							<td>{{account.accountNum}}</td>
        							<td>{{account.accountName}}</td>
        						</tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="row">
                    <div class="no-results">
                        <div class="text-danger">
                            No Results Found
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>

{{confirm-delete-modal model=account type="Account"}}
{{account-modal account=account}}